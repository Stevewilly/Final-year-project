<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/content_stamp_card_pink_house"
    android:background="@drawable/curve_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="@dimen/activity_vertical_margin"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logoCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">




                <TextView
                    android:id="@+id/company"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:textColor="#fff"
                    android:textSize="14pt"
                    android:text="Load Merchant Name Here"
                    />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:textColor="#ffffff"
                    android:textSize="8pt"/>
                <TextView
                    android:id="@+id/rewards"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:textColor="#ffffff"
                    android:textSize="8pt"/>

            </LinearLayout>
        </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:weightSum="1">
        <ImageView
            android:id="@+id/stamp1"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/earned_stamp"/>
        <ImageView
            android:id="@+id/stamp2"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/earned_stamp"
            android:layout_weight="0.88" />
        <ImageView
            android:id="@+id/stamp3"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/stamp_empty1"/>
        <ImageView
            android:id="@+id/stamp4"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/stamp_empty1"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/stamp5"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="@drawable/stamp_empty1"
                android:layout_weight="0.18" />
            <ImageView
                android:id="@+id/stamp6"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="@drawable/stamp_empty1"
                android:layout_weight="0.11" />
            <ImageView
                android:id="@+id/stamp7"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="@drawable/stamp_empty1"/>
            <ImageView
                android:id="@+id/stamp8"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="@drawable/stamp_empty1"
                android:layout_weight="0.17" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:weightSum="1">




        <ImageView
            android:id="@+id/stamp9"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/stamp_empty1"/>
        <ImageView
            android:id="@+id/stamp10"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/stamp_empty1"/>
        <ImageView
            android:id="@+id/stamp11"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/stamp_empty1"/>
        <ImageView
            android:id="@+id/stamp12"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/stamp_empty1"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp">

    </LinearLayout>
        <TextView
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:text="Choose your redeem option"
            android:layout_weight="0.20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:id="@+id/gain_stamp"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:background="@drawable/shape"
                android:textColor="@color/text_color"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:text="@string/gain_stamp"/>
            <Button
                android:id="@+id/cancel_card"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/shape"
                android:textColor="@color/text_color"
android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"


                android:text="Cancel">

            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>